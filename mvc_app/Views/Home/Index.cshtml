@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity

@{
    Layout = "_Layout";
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="text-center">
            <h1 class="display-4">Hello, @User.Identity.Name</h1>
            <img src="/img/main.png" class="img-fluid rounded mx-auto d-block mb-4" alt="Main Image" style="max-width: 500px;" />
            <form asp-action="Logout" asp-controller="User" method="post" class="mt-3">
                <button type="submit" class="btn btn-danger btn-lg">Logout</button>
            </form>
        </div>
    }
    else
    {
        <div class="text-center">
            <img src="/img/main.png" class="img-fluid rounded mx-auto d-block mb-4" alt="Main Image" style="max-width: 500px;" />
            <h2 class="text-muted">Welcome! Please log in to continue.</h2>
            <a href="@Url.Action("Auth", "User")" class="btn btn-primary btn-lg mt-3">Login</a>
        </div>
    }
</div>
