@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Shop academy step</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="/css/Style.css" rel="stylesheet" />
</head>
<body>
    <header class="p-3 mb-2 bg-dark text-light py-4 " style="height:100px">
        <h1 class="text-center">Products</h1>
    </header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/products/index">Products</a>
                    </li>
                     
                </ul>
                <ul class="navbar-nav me-2 mb-2 mb-lg-0">
                    <li class="nav-item dropdown">

                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" asp-action="CreateRole" asp-controller="User">Create Role Product</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" asp-action="AssignRole" asp-controller="User">Assign Role Product</a>
                                </li>
                                    <a class="nav-link active" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @User.Identity.Name
                                    </a>
                                <li class="nav-item">
                                    <form asp-action="Logout" asp-controller="User" method="post" class="mt-6">
                                        <button type="submit" class="btn btn-danger ">Logout</button>
                                    </form>
                                </li>
                            
                            }
                            else
                            {
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Login
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/user/register">Register</a></li>
                                    <li><a class="dropdown-item" href="/user/auth">Auth</a></li>
                                </ul>
                            }
                         }
                       
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main>
        @RenderBody()
    </main>
    <footer class="bg-dark text-light py-4">
        <div class="container text-center">
            <p class="mb-1">&copy; 2024 Анкуца Вадим</p>
            <p class="mb-1">
                <a href="mailto:vadimancuta@gmail.com" class="text-light">vadimancuta@gmail.com</a> |
                <a href="tel:+380502223209" class="text-light">+380502223209</a>
            </p>
            <p>
                <a href="https://github.com/Vadymca" class="text-light" target="_blank">GitHub: Vadymca</a>
            </p>
        </div>
    </footer>
</body>
</html>