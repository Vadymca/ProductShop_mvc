@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Assign Role";
}

<h3 class="text-center">Assign Role</h3>

<div class="container">
    <form asp-action="AssignRole" method="post" class="mt-4">
        <div class="form-group">
            <label for="userId">UserId:</label>
            <input type="text" id="userId" name="userId" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="roleName">roleName:</label>
            <input type="text" id="roleName" name="roleName" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary btn-block">Assign</button>
    </form>
</div>

